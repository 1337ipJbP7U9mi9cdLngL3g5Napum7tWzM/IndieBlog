<%= stylesheet_pack_tag 'post', 'trix' %>
<%= javascript_pack_tag 'post', 'trix' %>

<div class="index">
  <h2 class="post_header">Posts</h2>
  <div class="index__posts">

    <% @posts.each do |post| %>
      <h2><%= post.title %></h2>
      <p>
        <%= post.short_description %>
      </p>
      <%= link_to post_path(post) do %>
        <button type="button" name="button">Continue Reading</button>
      <% end %>
      <%# button_to "Continue Reading", post_path(post), method: :get %>
    <% end %>
  </div>
  <%= will_paginate @posts, class: "digg_pagination", param_name: :page %>
